{
  "name": "@publikum/error",
  "version": "1.0.0",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "license": "MIT",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "type": "module",
  "exports": {
    "require": "cjs/index.js",
    "import": "esm/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:jamashita/publikum.git"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": "npm is not supported"
  },
  "private": true,
  "sideEffects": false,
  "engineStrict": true,
  "files": [
    "cjs",
    "esm"
  ],
  "scripts": {
    "build": "yarn clean && concurrently \"npm:build:*\"",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "concurrently \"npm:clean:*\"",
    "clean:cjs": "rimraf cjs",
    "clean:esm": "rimraf esm",
    "test": "jest test --detectOpenHandles --passWithNoTests",
    "lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "update": "yarn update:upgrade && yarn update:install",
    "update:upgrade": "ncu --upgrade --timeout 600000",
    "update:install": "yarn install"
  },
  "dependencies": {
    "make-error-cause": "2.3.0"
  },
  "devDependencies": {
    "npm-check-updates": "6.0.1",
    "@types/jest": "25.2.3",
    "@types/node": "14.0.5",
    "@types/sinon": "9.0.4",
    "@typescript-eslint/eslint-plugin": "3.0.1",
    "@typescript-eslint/parser": "3.0.1",
    "@typescript-eslint/typescript-estree": "3.0.1",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.1",
    "eslint-plugin-prettier": "3.1.3",
    "jest": "26.0.1",
    "lint-staged": "10.2.6",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "sinon": "9.0.2",
    "ts-jest": "26.0.0",
    "typescript": "3.9.3"
  }
}
