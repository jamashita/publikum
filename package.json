{
  "name": "@jamashita/publikum",
  "version": "1.1.3",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:jamashita/publikum.git"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": "npm is not supported"
  },
  "private": true,
  "sideEffects": false,
  "engineStrict": true,
  "scripts": {
    "setup": "lerna bootstrap && lerna link",
    "reset": "lerna clean",
    "build": "lerna run --parallel build",
    "clean": "lerna run --parallel clean",
    "test": "jest test --detectOpenHandles --passWithNoTests",
    "lint": "eslint --fix 'packages/**/src/**/*.{ts,tsx}'",
    "format": "prettier --write 'packages/**/src/**/*.{ts,tsx}'",
    "update": "yarn update:upgrade && yarn update:install && yarn update:package",
    "update:upgrade": "ncu --upgrade --timeout 600000",
    "update:install": "yarn install && yarn upgrade",
    "update:package": "lerna run --parallel update",
    "versionup": "lerna version --conventional-commits --conventional-graduate",
    "register": "lerna publish",
    "preregister": "yarn build"
  },
  "dependencies": {
    "bcrypt": "4.0.1",
    "chance": "1.1.6",
    "dayjs": "1.8.28",
    "ioredis": "4.17.3",
    "make-error-cause": "2.3.0",
    "mysql": "2.18.1",
    "object-hash": "2.0.3",
    "superagent": "5.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/chance": "1.1.0",
    "@types/ioredis": "4.16.4",
    "@types/jest": "25.2.3",
    "@types/mysql": "2.15.13",
    "@types/node": "14.0.11",
    "@types/object-hash": "1.3.3",
    "@types/sinon": "9.0.4",
    "@types/superagent": "4.1.7",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "@typescript-eslint/typescript-estree": "3.1.0",
    "concurrently": "5.2.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lerna": "3.22.0",
    "lint-staged": "10.2.9",
    "npm-check-updates": "6.0.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "sinon": "9.0.2",
    "ts-jest": "26.1.0",
    "typescript": "3.9.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
