{
  "name": "@jamashita/publikum",
  "version": "2.17.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:jamashita/publikum.git"
  },
  "license": "MIT",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "sideEffects": false,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "//": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo --tag-format='v\\${version}'",
    "build": "lerna run --parallel build",
    "clean": "rimraf coverage && rimraf docs && lerna run --parallel clean",
    "commit": "git cz",
    "documentation": "typedoc --includeVersion --exclude 'node_modules' --exclude '**/*.spec.ts' --stripInternal --out docs .",
    "force": "lerna publish from-package --force-publish",
    "force publish": "lerna publish --force-publish=* --no-git-tag-version --no-push",
    "format": "eslint --fix 'packages/*/src/**/*.{ts,tsx}'",
    "prerelease": "lerna version --no-push",
    "release": "lerna publish from-git --yes",
    "postrelease": "git push --follow-tags origin",
    "reset": "lerna clean",
    "setup": "lerna bootstrap && lerna link",
    "test": "jest test",
    "test-parallel": "lerna run --parallel test",
    "update": "yarn update:upgrade && yarn update:install",
    "update:install": "yarn install && yarn upgrade && lerna run --parallel update:install",
    "update:upgrade": "ncu --upgrade --timeout 600000 && lerna run --parallel update:upgrade",
    "versionup": "lerna version --conventional-commits --conventional-graduate --include-merged-tags"
  },
  "dependencies": {
    "bcrypt": "5.0.0",
    "crypto-random-string": "3.3.0",
    "d3-random": "2.2.2",
    "dayjs": "1.9.6",
    "got": "11.8.0",
    "ioredis": "4.19.2",
    "make-error-cause": "2.3.0",
    "mysql": "2.18.1",
    "node-fetch": "3.0.0-beta.9",
    "object-hash": "2.0.3",
    "reflect-metadata": "0.1.13",
    "uuid": "8.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@jamashita/eslint-config": "1.8.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.1.1",
    "@semantic-release/npm": "7.0.6",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@types/bcrypt": "3.0.0",
    "@types/chance": "1.1.0",
    "@types/d3-random": "2.2.0",
    "@types/ioredis": "4.17.7",
    "@types/jest": "26.0.15",
    "@types/mysql": "2.15.15",
    "@types/node": "14.14.7",
    "@types/object-hash": "1.3.4",
    "@types/sinon": "9.0.8",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "@typescript-eslint/typescript-estree": "4.7.0",
    "concurrently": "5.3.0",
    "eslint": "7.13.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "git-cz": "4.7.3",
    "http-status-codes": "2.1.4",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-fetch-mock": "3.0.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.1",
    "nock": "13.0.5",
    "npm-check-updates": "10.0.0",
    "rimraf": "3.0.2",
    "semantic-release": "17.2.2",
    "semantic-release-monorepo": "7.0.3",
    "sinon": "9.2.1",
    "sort-package-json": "1.46.1",
    "ts-jest": "26.4.4",
    "typedoc": "0.19.2",
    "typescript": "4.0.5"
  },
  "engines": {
    "node": ">= 14.5.0",
    "npm": "npm is not supported"
  },
  "engineStrict": true
}
