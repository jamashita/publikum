{
  "name": "@jamashita/publikum",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:jamashita/publikum.git"
  },
  "license": "MIT",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "sideEffects": false,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run --parallel build",
    "clean": "lerna run --parallel clean",
    "format": "eslint --fix 'packages/*/src/**/*.{ts,tsx}'",
    "preregister": "yarn build",
    "register": "lerna publish",
    "reset": "lerna clean",
    "setup": "lerna bootstrap && lerna link",
    "test": "jest test --detectOpenHandles --passWithNoTests",
    "update": "yarn update:upgrade && yarn update:install",
    "update:install": "yarn install && yarn upgrade && lerna run --parallel update:install",
    "update:upgrade": "ncu --upgrade --timeout 600000 && lerna run --parallel update:upgrade",
    "versionup": "lerna version --conventional-commits --conventional-graduate"
  },
  "dependencies": {
    "axios": "0.20.0",
    "bcrypt": "5.0.0",
    "chance": "1.1.7",
    "dayjs": "1.8.35",
    "got": "11.6.1",
    "ioredis": "4.17.3",
    "make-error-cause": "2.3.0",
    "mysql": "2.18.1",
    "object-hash": "2.0.3"
  },
  "devDependencies": {
    "@jamashita/eslint-config": "1.1.1",
    "@types/bcrypt": "3.0.0",
    "@types/chance": "1.1.0",
    "@types/ioredis": "4.17.4",
    "@types/jest": "26.0.13",
    "@types/mysql": "2.15.15",
    "@types/node": "14.6.4",
    "@types/object-hash": "1.3.3",
    "@types/sinon": "9.0.5",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "@typescript-eslint/typescript-estree": "4.1.0",
    "concurrently": "5.3.0",
    "eslint": "7.8.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lerna": "3.22.1",
    "lint-staged": "10.3.0",
    "nock": "13.0.4",
    "npm-check-updates": "8.1.1",
    "rimraf": "3.0.2",
    "sinon": "9.0.3",
    "sort-package-json": "1.44.0",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  },
  "engines": {
    "node": ">= 14.5.0",
    "npm": "npm is not supported"
  },
  "engineStrict": true
}
